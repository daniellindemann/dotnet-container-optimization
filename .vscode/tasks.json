{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "01-dotnet-config-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/01-dotnet-config/01-dotnet-config.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "01-dotnet-config-publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/01-dotnet-config/01-dotnet-config.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "01-dotnet-config-watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/01-dotnet-config/01-dotnet-config.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}